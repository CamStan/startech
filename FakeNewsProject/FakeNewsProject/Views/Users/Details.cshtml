@model FakeNewsProject.Models.User

@{
    ViewBag.Title = "Detail Page for " + Model.UserName;
}

<center><h2>User Details for @Model.UserName</h2></center>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>Real Name</dt>
        <dd>
        @Html.DisplayFor(model => model.FName) 
        @Html.DisplayFor(model => model.LName)</dd>
        <dd><br/></dd>
        <dt>
            Stories:
        </dt>
            @foreach (var item in Model.Stories)
            {
                <dd>@item.Title</dd>
            }
    </dl>
</div>
