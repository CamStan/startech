<!-- This is the corresponding "starter code" for 04_Hello Map in Udacity and Google's Maps
API Course, Lesson 1 -->
<style type="text/css">
    html, body {
        height: 800px;
        margin: 0;
        padding: 0;
    }

    #map {
        height: 800px;
    }
</style>
<br />
<br />
<br />
<div>
    @using (Html.BeginForm())
    {
        <p>
            Zip Code: @Html.TextBox("zipCode", "")
            <input type="submit" value="Center Map" id="getZip" />
        </p>
    }
</div>
<br />
<div id="map"></div>
<script>
    var map;

    function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            center: { lat: 40.7413549, lng: -73.9980244 },
            zoom: 13
        });

        var centerLat = @ViewBag.center.results[0].geometry.location.lat;
        var centerLng = @ViewBag.center.results[0].geometry.location.lng;
        var pos = {
            lat: centerLat,
            lng: centerLng
        };
        map.setCenter(pos);
    }
</script>

<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCMzq0fLRdhVhgT42oiQrfu-gz9m0ftvhk&v=3&callback=initMap">
</script>
