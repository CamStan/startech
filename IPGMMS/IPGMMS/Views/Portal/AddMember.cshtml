<link href="~/Content/Forms.css" rel="stylesheet" type="text/css" />

@model IPGMMS.ViewModels.MemberCreate


@{
    ViewBag.Title = "AddMember";
    Layout = "~/Views/Shared/_AdminPortalLayout.cshtml";
}

<h2>New IPG Member</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <h3>Member Info</h3>
            <hr />
            <div class="col-md-5">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @*IPG Member #*@
                @Html.HiddenFor(model => model.MemberInfo.Membership_Number)
                @*<div class="form-group">
                    @Html.LabelFor(model => model.MemberInfo.Membership_Number, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.MemberInfo.Membership_Number, new { htmlAttributes = new { @class = "form-control", placeholder = "leave blank if none" } })
                        @Html.ValidationMessageFor(model => model.MemberInfo.Membership_Number, "", new { @class = "text-danger" })
                    </div>
                </div>*@

                @* First Name *@
                <div class="form-group required">
                    @Html.LabelFor(model => model.MemberInfo.FirstName, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.MemberInfo.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MemberInfo.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* Middle Name *@
                <div class="form-group">
                    @Html.LabelFor(model => model.MemberInfo.MiddleName, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.MemberInfo.MiddleName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MemberInfo.MiddleName, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* Last Name *@
                <div class="form-group required">
                    @Html.LabelFor(model => model.MemberInfo.LastName, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.MemberInfo.LastName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MemberInfo.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*Member Level Drop Box*@
                <div class="form-group required">
                    @Html.LabelFor(model => model.MemberInfo.MemberLevel, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.DropDownListFor(model => model.MemberInfo.MemberLevel, Model.Levels)
                        @Html.ValidationMessageFor(model => model.MemberInfo.MemberLevel, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            @* End of first column*@

            @* Start of second column*@
            <div class="col-md-5">
                @*Member Since Date*@
                <div class="form-group">
                    @Html.LabelFor(model => model.MemberInfo.Membership_SignupDate, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.MemberInfo.Membership_SignupDate, new { type = "date", htmlAttributes = new { @class = "form-control", placeholder = "yyyy-mm-dd" } })
                        @Html.ValidationMessageFor(model => model.MemberInfo.Membership_SignupDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*Member Expiration Date*@
                <div class="form-group">
                    @Html.LabelFor(model => model.MemberInfo.Membership_ExpirationDate, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.MemberInfo.Membership_ExpirationDate, new { type = "date", htmlAttributes = new { @class = "form-control", placeholder = "yyyy-mm-dd" } })
                        @Html.ValidationMessageFor(model => model.MemberInfo.Membership_ExpirationDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* Business Name *@
                <div class="form-group">
                    @Html.LabelFor(model => model.MemberInfo.BusinessName, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.MemberInfo.BusinessName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MemberInfo.BusinessName, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* Website *@
                <div class="form-group">
                    @Html.LabelFor(model => model.MemberInfo.Website, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.MemberInfo.Website, new { htmlAttributes = new { @class = "form-control", placeholder = "http://www.mywebsite.com" } })
                        @Html.ValidationMessageFor(model => model.MemberInfo.Website, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.HiddenFor(model => model.MemberInfo.Identity_ID)
                @*@Html.LabelFor(model => model.MemberInfo.Identity_ID, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-10">
                        @Html.EditorFor(model => model.MemberInfo.Identity_ID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MemberInfo.Identity_ID, "", new { @class = "text-danger" })
                    </div>*@
            </div>
            @* Spacer column to have white space on right*@
            <div class="col-md-2"></div>
        </div>
        <br />
        @* End of Member info input*@

        @* Start of Contact Info input*@
        <div class="row">

            @* Mailing Contact Info *@
            <div class="col-md-5">
                <h3>Mailing Contact Info</h3>
                <hr />
                <br />
                <br />
                <div class="form-group required">
                    @Html.LabelFor(model => model.MailingInfo.Email, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.MailingInfo.Email, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.MailingInfo.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group required">
                    @Html.LabelFor(model => model.MailingInfo.PhoneNumber, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.MailingInfo.PhoneNumber, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "5555551234" } })
                        @Html.ValidationMessageFor(model => model.MailingInfo.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group required">
                    @Html.LabelFor(model => model.MailingInfo.StreetAddress, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.MailingInfo.StreetAddress, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.MailingInfo.StreetAddress, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group required">
                    @Html.LabelFor(model => model.MailingInfo.City, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.MailingInfo.City, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.MailingInfo.City, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group required">
                    @Html.LabelFor(model => model.MailingInfo.StateName, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.MailingInfo.StateName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.MailingInfo.StateName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group required">
                    @Html.LabelFor(model => model.MailingInfo.Country, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.MailingInfo.Country, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "i.e., US/CA/UK" } })
                        @Html.ValidationMessageFor(model => model.MailingInfo.Country, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group required">
                    @Html.LabelFor(model => model.MailingInfo.PostalCode, htmlAttributes: new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.EditorFor(model => model.MailingInfo.PostalCode, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.MailingInfo.PostalCode, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
            </div>
            @* End of Mailing Info *@

            @* Listing Contact Info *@
            <div class="col-md-5">
                <h3>Listing Contact Info</h3>
                <hr />
                <div>
                    Same as mailing
                    <input type="checkbox" id="trigger" />
                </div>
                <br />
                <div id="hidden_form">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ListingInfo.Email, htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.ListingInfo.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ListingInfo.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ListingInfo.PhoneNumber, htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.ListingInfo.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "no dashes" } })
                            @Html.ValidationMessageFor(model => model.ListingInfo.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ListingInfo.StreetAddress, htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.ListingInfo.StreetAddress, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ListingInfo.StreetAddress, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ListingInfo.City, htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.ListingInfo.City, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ListingInfo.City, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ListingInfo.StateName, htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.ListingInfo.StateName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ListingInfo.StateName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ListingInfo.Country, htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.ListingInfo.Country, new { htmlAttributes = new { @class = "form-control", placeholder = "i.e., US/CA/UK" } })
                            @Html.ValidationMessageFor(model => model.ListingInfo.Country, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ListingInfo.PostalCode, htmlAttributes: new { @class = "control-label col-lg-4" })
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.ListingInfo.PostalCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ListingInfo.PostalCode, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                $(function () {
                    var checkbox = $("#trigger");
                    var hidden = $("#hidden_form");
                    //hidden.hide();

                    checkbox.change(function () {
                        if (checkbox.is(':checked')) {
                            document.getElementById("ListingInfo_Email").value = document.getElementById("MailingInfo_Email").value;
                            document.getElementById("ListingInfo_PhoneNumber").value = document.getElementById("MailingInfo_PhoneNumber").value;
                            document.getElementById("ListingInfo_StreetAddress").value = document.getElementById("MailingInfo_StreetAddress").value;
                            document.getElementById("ListingInfo_City").value = document.getElementById("MailingInfo_City").value;
                            document.getElementById("ListingInfo_StateName").value = document.getElementById("MailingInfo_StateName").value;
                            document.getElementById("ListingInfo_Country").value = document.getElementById("MailingInfo_Country").value;
                            document.getElementById("ListingInfo_PostalCode").value = document.getElementById("MailingInfo_PostalCode").value;
                        } else {
                            document.getElementById("ListingInfo_Email").value = "";
                            document.getElementById("ListingInfo_PhoneNumber").value = "";
                            document.getElementById("ListingInfo_StreetAddress").value = "";
                            document.getElementById("ListingInfo_City").value = "";
                            document.getElementById("ListingInfo_StateName").value = "";
                            document.getElementById("ListingInfo_Country").value = "";
                            document.getElementById("ListingInfo_PostalCode").value = "";
                        }
                    });
                });
                </script>
            </div>
            @* End of Listing Info *@
            <div class="col-md-2"></div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-5 col-lg-7 col-md-offset-4 col-md-8">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
